<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.user.fragments.MainActivity">

    <fragment
        android:id="@+id/fragRed"
        android:name="com.example.user.fragments.RedFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frag_height"/>

    <Button
        android:onClick="addingFragments"
        android:text="Add blue fragment"
        android:id="@+id/btnAddBlueFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="addingFragments"
        android:text="Add Green fragment"
        android:id="@+id/btnAddGreenFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:onClick="addingFragments"
        android:text="Add Yellow fragment"
        android:id="@+id/btnAddYellowFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:onClick="addingFragments"
        android:text="Add Text To Yellow fragment"
        android:id="@+id/btnAddTextToYellowFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/frameBlue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frag_height"/>

    <FrameLayout
        android:id="@+id/frameGreen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frag_height"/>


    <FrameLayout
        android:id="@+id/frameYellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
