<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.user.UserActivity">


    <!--Okhttp-->
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Okhttp"/>


    <Button
        android:id="@+id/btnOkhttpExecute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onOkhttp"
        android:text="Execute"/>


    <Button
        android:id="@+id/btnOkhttpEnqueue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onOkhttp"
        android:text="Enqueue"/>


    <!--Retrofit-->
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrofit"/>


    <Button
        android:id="@+id/btnRetrofitExecute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onRetrofit"
        android:text="Execute"/>


    <Button
        android:id="@+id/btnRetrofitEnqueue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onRetrofit"
        android:text="Enqueue"/>

    <!--user form-->
    <EditText
        android:id="@+id/etGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gender"/>

    <EditText
        android:id="@+id/etResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Results"/>

    <Button
        android:id="@+id/btnGetUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="getRandomUsers"
        android:text="Get random users"/>


</LinearLayout>